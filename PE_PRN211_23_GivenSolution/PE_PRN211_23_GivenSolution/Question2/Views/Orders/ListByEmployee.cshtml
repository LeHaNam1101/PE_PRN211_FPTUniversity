@{
}
@using Question2.Models;

<h1>List of Orders</h1>


<table>
    <tr>
        <td>OrderDate</td>
        <td>RequiredDate</td>
        <td>ShippedDate</td>
        <td>Freight</td>
        <td>Employee</td>
        <td>Action</td>
    </tr>




    @foreach (Order e in Model)
    {
        <tr>
            <td>@e.OrderDate</td>
            <td>@e.RequiredDate</td>
            <td>@e.ShippedDate</td>
            <td>@e.Freight</td>
            <td>@e.Employee</td>
            <td>@e.OrderDetails</td>

            <td><a href="/Order/Delete/?id= @e.OrderId">Delete</a></td>
            <td><a href="/Order/Details/?id= @e.OrderId">Details</a></td>
            <td><a href="/Order/Create">Create</a></td>
        </tr>

    }

</table>
