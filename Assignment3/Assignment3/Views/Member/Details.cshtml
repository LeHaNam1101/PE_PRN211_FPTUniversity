@model Assignment3.Models.Member

<h1>Member Details</h1>

@if (Model != null)
{
    <h3>Member ID: @Model.MemberId</h3>
    <p>Email: @Model.Email</p>
    <p>Company Name: @Model.CompanyName</p>
    <p>City: @Model.City</p>
    <p>Country: @Model.Country</p>

    @if (!string.IsNullOrEmpty(ViewBag.OrderDetailsUrl))
    {
        <p><a href="@ViewBag.OrderDetailsUrl">View Order Details</a></p>
    }
}
else
{
    <p>Member not found.</p>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
