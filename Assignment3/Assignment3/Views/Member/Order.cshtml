@model Assignment3.Models.Order

<h1>Order</h1>

@if (Model != null)
{
    <h3>Order ID: @Model.OrderId</h3>
    <p>Order Date: @Model.OrderDate</p>
    <p>Required Date: @Model.RequiredDate</p>
    <p>Shipped Date: @Model.ShippedDate</p>
    <p>Freight: @Model.Freight</p>
    <a href="@Url.Action("OrderDetails", "Member", new { orderId = Model.OrderId })">View Order Details</a>

    <a href="@Url.Action("Refresh")" style="background-color: black; color: lightgray; border-radius: 5px;">Refresh</a>
}
else
{
    <p>Order not found.</p>
}

